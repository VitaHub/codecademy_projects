<div class='container'>
<div class="book">
  <p class="title"> <%= @book.title %> </p>
  <p class="author">by  <%= @book.author %> </p>
  <p class="publisher">(<%= @book.publisher %>)</p>
  <p class="description"> <%= @book.description %> </p>
</div>

<div class="reviews">
  <% @reviews.each do |rev| %>
    <div class="review">
      <p class="author"> <%= rev.author %> </p>
      <p class="comment"> <%= rev.comment %> </p>
    </div>
  <% end %>
</div>
  </div>


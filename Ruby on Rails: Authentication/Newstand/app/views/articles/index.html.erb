<div class="articles">
  <div class="container">
    
    <% @articles.each do |article| %>
    <div class="article">
      <p class="date"><%= article.created_at.strftime('%b %d') %></p>
      <!-- http://stackoverflow.com/questions/1086360/how-do-i-wrap-link-to-around-some-html-ruby-code -->
      <%= link_to(article) do %>
        <h2><%= article.title %></h2>
      <% end %>
      <p class="author">by <%= article.author %></p>
      <p class="article_content"><%= truncate(article.body , :length => 140) %></p>
    </div>
    <% end %>
    <% if current_user %>
      <% if current_user.role == 'author' %>
        <a href='<%= new_article_path %>' style="text-decoration: none;"><div class='Linko'>New post</div></a>
    <% end %><% end %>
  </div>
</div>
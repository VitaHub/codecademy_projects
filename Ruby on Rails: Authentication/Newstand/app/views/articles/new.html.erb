<div class="new-article">
  <div class="container">

    <%= form_for(@article) do |f| %>    
      <%= f.text_field :title, :placeholder => "Title" %>
      <%= f.text_field :author, :value => current_user.first_name+' '+current_user.last_name %>
      <%= f.text_area :body %>

      <%= f.submit "Save" %>
    <% end %>
  </div>
</div>
<div class="profile">
  <div class="container">
    
    <!-- Your form here -->
    	<%= form_for(@user) do |f| %>
    		<%= f.text_field :first_name, :placeholder => @user.first_name %>
    		<%= f.text_field :last_name, :placeholder => @user.last_name %>
    		<%= f.email_field :email, :placeholder => @user.email %>
    		<%= f.text_field :role, :placeholder => @user.role  %>
    		<%= f.submit 'Save', class: 'btn-submit' %>
    	<% end %> 
  </div>
</div>